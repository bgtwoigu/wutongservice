{% extends 'publisher_layout.jinja2' %}
{% block main_content %}
    <div class="row-fluid">
        <p class="lead text-info span8 offset2">Do you want to continue editing other language versions of the information? </p>
    </div>
    <div class="row-fluid">
        <button class="btn btn-large btn-gebo span2 offset4" onclick="transit(true)">Yes</button>
        <button class="btn btn-large span2" onclick="transit(false)">No</button>
    </div>
{% endblock %}
{% block script %}
    <script type="text/javascript">
        function transit(b) {
            if (b) {
                location.href = '{{ '/publisher/products/versions/update.html?id=%s&version=%s' % (id, version)}}'
            } else {
                location.href = '{{ '/publisher/products/list.html?app=%s' % (app)}}'
            }
        }
    </script>
{% endblock %}